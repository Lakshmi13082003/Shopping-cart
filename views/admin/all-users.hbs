<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"  href="/stylesheets/table.css">
    <title>All Users</title>
</head>
<body>
    <div class="container">
        <div class="head">
            <h1>All Users</h1>
        </div>
        <table>
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Password</th>
                    <th scope="col">Email</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                    <th scope="row" data-label="No">{{@index}}</th>
                    <td data-label="Name">{{this.name}}</td>
                    <td data-label="Password">{{this.password}}</td>
                    <td data-label="Email">{{this.email}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>
</html>
